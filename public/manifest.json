{
  "manifest_version": 3,
  "name": "Url Popper",
  "version": "3.0.0",
  "description": "This browser extension displays the URL when the cursor hovers over a link.",
  "permissions": ["scripting", "storage", "tabs", "activeTab"],
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "images/icon16_on.png"
    }
  },
  "icons": {
    "19": "images/icon16_on.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
